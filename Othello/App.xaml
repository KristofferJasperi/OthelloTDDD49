<Application x:Class="Othello.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Styles -->
        <Style x:Key="SidePanel" TargetType="StackPanel">
        </Style>
        <Style x:Key="SideBoxBorder" TargetType="Border">
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="3"/>
        </Style>
        <Style x:Key="SideBox" TargetType="StackPanel">
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style x:Key="SideBoxHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
        </Style>
        
        <!-- Templates -->
    </Application.Resources>
</Application>
